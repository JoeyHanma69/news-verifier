{
  "name": "ai-news-verification-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:setup": "psql $DATABASE_URL -f scripts/database-setup.sql",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "npm run db:setup && npm run db:seed",
    "python:setup": "cd python-api && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "python:start": "bash scripts/start-url-analysis.sh",
    "dev:full": "concurrently \"npm run python:start\" \"npm run dev\"",
    "train:models": "bash scripts/train-models.sh",
    "train:rss": "python scripts/ml_training_pipeline.py --method rss --max_articles_per_feed 25",
    "train:urls": "python scripts/ml_training_pipeline.py --method urls --reliable_urls_file reliable_urls.txt --unreliable_urls_file unreliable_urls.txt",
    "train:mixed": "python scripts/ml_training_pipeline.py --method mixed --unreliable_urls_file unreliable_urls.txt --train_transformer",
    "collect:unreliable": "python scripts/create_unreliable_urls.py --output unreliable_urls.txt --validate",
    "analyze:batch": "python scripts/url_batch_analyzer.py",
    "analyze:source": "python scripts/source_credibility_checker.py",
    "test:urls": "python scripts/url_batch_analyzer.py --urls_file example_urls.txt --output test_results.json --csv_output test_results.csv"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18",
    "ai": "^3.0.0",
    "@ai-sdk/openai": "^0.0.0",
    "zod": "^3.22.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-progress": "^1.0.3",
    "lucide-react": "^0.294.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "pg": "^8.11.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/pg": "^8.10.0",
    "autoprefixer": "^10.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.17",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "concurrently": "^8.2.0"
  }
}
